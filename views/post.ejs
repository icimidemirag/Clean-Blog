<%- include('partials/_header') -%>

<body>

  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p><%= post.detail %></p>
          <p style="font-size:small">Upload date: <%= post.dateCreated %></p>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <div class="clearfix">
    <a class="btn btn-primary float-right" style="margin: 10px;" href="/post/edit/<%= post._id %>">Update Post</a>
  </div>
  <div class="clearfix">
    <a href="/post/<%= post._id %>?_method=DELETE" class="btn btn-primary float-right" style="margin: 10px; background-color: #dd0000; border-color: #dd0000;"
      onclick="return confirm('Are you sure?')">Delete Post</a>
  </div>

  <%- include('partials/_footer') -%>

</body>

</html>
